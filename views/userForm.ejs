<% include ./partials/header %>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <form class="userform row" action="/submitUser" method="post">
      <br>
        <div class="col-xs-4">
            <div class="col">
              <label for="Name"</label>

              <select class="" name="name">
                <% for(var x = 0;x<users.length;x++) { %>
                  <option value="<%= users[x]['name'] %>"><%= users[x]['name'] %></option>
                <% } %>
              </select>
            </div>
        </div>
        <div class="col-xs-4">
           <% for (var j = 1;j<6;j++) { %>
            <div class="col">
              <label for="characterChoice<%= j %>">Character Slot <%= j %></label>

              <select class="" name="characterChoice<%= j %>">
                <% for(var i = 0;i<len;i++) { %>
                  <option value="<%= characters[i]['name'] %>"><%= characters[i]['name'] %></option>
                <% } %>
              </select>
            </div>
          <% } %> 
        </div>
      
      <br>
      <div class>
        <input type="submit" name="submit" value="Submit">
      </div>
    </form>
  </body>
</html>
